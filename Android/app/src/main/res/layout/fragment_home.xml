<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gabri.phresko.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent">
                <TextView
                    android:text="Timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:id="@+id/tagname_textView"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/search"
                    android:id="@+id/imageButton6"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/alert"
                    android:id="@+id/imageButton7"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageButton6"
                    android:layout_toStartOf="@+id/imageButton6"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:text="3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/textView7"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageButton6"
                    android:layout_toStartOf="@+id/imageButton6"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/notifications_bg" />
            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image_listview" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
